{
    "name": "@camberi/firecms",
    "version": "1.0.3-pre",
    "description": "Awesome Firebase/Firestore-based headless open-source CMS",
    "author": "camberi",
    "homepage": "https://firecms.co",
    "license": "MIT",
    "repository": "git@github.com:Camberi/firecms.git",
    "main": "./dist/index.umd.js",
    "module": "./dist/index.es.js",
    "types": "dist/index.d.ts",
    "source": "src/index.ts",
    "engines": {
        "node": ">=14"
    },
    "exports": {
        ".": {
            "import": "./dist/index.es.js",
            "require": "./dist/index.umd.js"
        }
    },
    "keywords": [
        "firebase",
        "cms",
        "admin",
        "admin panel",
        "firebase panel",
        "firestore",
        "headless",
        "headless cms",
        "content manager"
    ],
    "scripts": {
        "dev": "cd example && run-s dev",
        "build": "vite build && tsc --emitDeclarationOnly",
        "prepublishOnly": "run-s build",
        "createTag": "PACKAGE_VERSION=$(cat package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
        "eslint": "eslint \"src/**\"",
        "test": "run-s test:unit test:lint",
        "test:lint": "eslint \"src/**\"",
        "test:unit": "cross-env CI=1 react-scripts test --transformIgnorePatterns \"node_modules/(?!react-markdown)/\"",
        "test:watch": "react-scripts test --transformIgnorePatterns \"node_modules/(?!react-markdown)/\""
    },
    "dependencies": {
        "@date-io/date-fns": "2.13.2",
        "@uiw/react-md-editor": "3.11.0",
        "date-fns": "2.28.0",
        "formik": "2.2.9",
        "history": "5",
        "object-hash": "3.0.0",
        "react-base-table": "1.13.0",
        "react-beautiful-dnd": "13.1.0",
        "react-dropzone": "14.2.1",
        "react-image-file-resizer": "0.4.8",
        "react-measure": "2.5.2",
        "react-transition-group": "4.4.2",
        "typeface-roboto": "1.1.13",
        "typeface-rubik": "1.1.13",
        "typeface-space-mono": "1.1.13",
        "yup": "0.32.11"
    },
    "peerDependencies": {
        "@emotion/react": "^11.4.1",
        "@emotion/styled": "^11.3.0",
        "@mui/icons-material": "^5",
        "@mui/lab": "^5.0.0-alpha.48",
        "@mui/material": "^5.0.0",
        "@mui/styles": "^5.0.0",
        "algoliasearch": "^4.13.0",
        "firebase": "^9.0.0",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-router": "^6.2.0",
        "react-router-dom": "^6.2.0",
        "react-scripts": "^5.0.1"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.17.0",
        "@emotion/react": "^11.9.0",
        "@emotion/styled": "^11.8.1",
        "@mui/icons-material": "^5",
        "@mui/lab": "^5.0.0-alpha.81",
        "@mui/material": "^5",
        "@mui/styles": "^5",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.2.0",
        "@testing-library/user-event": "^14.1.1",
        "@types/jest": "^27.5.0",
        "@types/node": "^17.0.31",
        "@types/object-hash": "^2.2.1",
        "@types/react": "^18.0.9",
        "@types/react-beautiful-dnd": "^13.1.2",
        "@types/react-dom": "^18.0.3",
        "@types/react-measure": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "@typescript-eslint/parser": "^5.23.0",
        "@vitejs/plugin-react": "^1.3.2",
        "algoliasearch": "^4.13.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.0.1",
        "eslint-config-standard": "^17.0.0",
        "eslint-config-standard-react": "^11.0.1",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-n": "^15.0.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.29.4",
        "eslint-plugin-react-hooks": "^4.5.0",
        "firebase": "^9.8.1",
        "jest": "^28.1.0",
        "npm-run-all": "^4.1.5",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-router": "^6.3.0",
        "react-router-dom": "^6.3.0",
        "react-scripts": "^5.0.1",
        "tsd": "^0.20.0",
        "typescript": "^4.6.4",
        "vite": "^2.9.8"
    },
    "files": [
        "dist"
    ]
}
