{
    "name": "@firecms/ui",
    "type": "module",
    "version": "3.0.0-beta.3",
    "description": "Awesome Firebase/Firestore-based headless open-source CMS",
    "funding": {
        "url": "https://github.com/sponsors/firecmsco"
    },
    "author": "FireCMS",
    "license": "MIT",
    "repository": "git@github.com:FireCMSco/firecms.git",
    "main": "./dist/index.umd.js",
    "module": "./dist/index.es.js",
    "types": "./dist/index.d.ts",
    "source": "src/index.ts",
    "engines": {
        "node": ">=14"
    },
    "keywords": [
        "firebase",
        "cms",
        "admin",
        "admin panel",
        "firebase panel",
        "firestore",
        "headless",
        "headless cms",
        "content manager"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.es.js",
            "require": "./dist/index.umd.js",
            "types": "./dist/src/index.d.ts"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "watch": "vite build --watch",
        "build": "vite build && tsc --emitDeclarationOnly",
        "prepublishOnly": "run-s build",
        "createTag": "PACKAGE_VERSION=$(cat package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
        "test:lint": "eslint \"src/**\" --quiet",
        "test": "jest",
        "clean": "rm -rf dist && find ./src -name '*.js' -type f | xargs rm -f",
        "generateIcons": "ts-node --esm src/scripts/generateIcons.ts"
    },
    "dependencies": {
        "@material-design-icons/font": "^0.14.13",
        "@radix-ui/react-checkbox": "^1.0.4",
        "@radix-ui/react-collapsible": "^1.0.3",
        "@radix-ui/react-dialog": "^1.0.5",
        "@radix-ui/react-dropdown-menu": "^2.0.6",
        "@radix-ui/react-label": "^2.0.2",
        "@radix-ui/react-popover": "^1.0.7",
        "@radix-ui/react-portal": "^1.0.4",
        "@radix-ui/react-radio-group": "^1.1.3",
        "@radix-ui/react-scroll-area": "^1.0.5",
        "@radix-ui/react-select": "^2.0.0",
        "@radix-ui/react-separator": "^1.0.3",
        "@radix-ui/react-switch": "^1.0.3",
        "@radix-ui/react-tabs": "^1.0.4",
        "@radix-ui/react-tooltip": "^1.0.7",
        "cmdk": "^0.2.1",
        "react-datepicker": "^4.25.0",
        "react-dropzone": "^14.2.3",
        "react-fast-compare": "^3.2.2",
        "tailwind-merge": "^2.2.1"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.25",
        "@types/object-hash": "^3.0.6",
        "@types/react": "^18.2.64",
        "@types/react-dom": "^18.2.21",
        "@types/react-measure": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "@vitejs/plugin-react": "^4.2.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.34.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "firebase": "^10.8.1",
        "jest": "^29.7.0",
        "npm-run-all": "^4.1.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tsd": "^0.30.7",
        "typescript": "^5.4.2",
        "vite": "^4.5.2"
    },
    "files": [
        "dist",
        "src"
    ],
    "gitHead": "33cceff5d5bc2a7002cc5a3904b787e70bfb9c6e",
    "publishConfig": {
        "access": "public"
    }
}
